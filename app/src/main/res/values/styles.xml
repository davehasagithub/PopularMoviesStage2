<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorContentPane</item>
    </style>

    <style name="AppTheme.NoTitle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="movie_detail_blurb">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/movie_text_medium</item>
        <item name="android:textColor">@color/movieDetailsTextColor</item>
    </style>

    <style name="movie_detail_blurb_original_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/movie_details_padding</item>
        <item name="android:textSize">@dimen/movie_text_small</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/movieDetailsTextColor</item>
    </style>

    <style name="movie_detail_overview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/movie_details_padding</item>
        <item name="android:textSize">@dimen/movie_text_medium</item>
        <item name="android:textColor">@color/movieDetailsTextColor</item>
    </style>

    <style name="no_movies_banner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/movie_text_small</item>
        <item name="android:textColor">@color/movieErrorTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/movie_grid_padding</item>
        <item name="android:layout_marginEnd">@dimen/movie_grid_padding</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">@dimen/movie_grid_padding</item>
        <item name="android:layout_marginBottom">@dimen/movie_grid_padding</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/no_movies_found</item>
    </style>

    <style name="video_and_review_text">
        <item name="android:textSize">@dimen/movie_text_small</item>
        <item name="android:textColor">@color/movieDetailsTextColor</item>
    </style>

</resources>
